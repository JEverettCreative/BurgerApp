<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center">
            <h1>Eat Da Burger!</h1>
        </div>
        <div class="col-xs-6 text-center" class="task" id="undevoured-burgers">
            <div class="row">
                {{#each data}}
                    {{#unless this.devoured}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
                <div class="col-xs-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT"
                        class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-lg btn-success devour">DEVOUR! NOM!</button> 
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-xs-6 text-center" id="devoured-burgers">
            {{#each data}}
                {{#if this.devoured}}
                <input class="form-control" type="text" placeholder=
                "{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="newburger-section">
            <form method="POST" action="/burgers/create">
            <input type="text" name="burger_name" class="form-control" value="" id="new-text">
                <button type="submit" class="btn btn-primary" id="submit-btn">Submit Order</button>
            <h4>Type in a burger you'd like to order and devour!</h4>
            </form>
        </div>
    </div>
</div>